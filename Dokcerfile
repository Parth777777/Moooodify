# Use a stable Python base image
FROM python:3.10-slim

# Prevent Python from writing pyc files
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Set working directory
WORKDIR /app

# Copy everything
COPY . /app

# Install system dependencies
RUN apt-get update && apt-get install -y libgl1-mesa-glx

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Preload DeepFace models to avoid Render runtime download errors
RUN python -c "from deepface import DeepFace; DeepFace.build_model('Facenet512')"

# Set DeepFace cache directory to writable location
ENV DEEPFACE_HOME=/tmp

# Expose and use Render's dynamic port
EXPOSE 10000
ENV PORT=10000

# Start the app with Gunicorn (Render expects this)
CMD gunicorn app:app --bind 0.0.0.0:$PORT
